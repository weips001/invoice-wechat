<view>
  <view class="user">
    <view class="avatar">
      <open-data wx:if="{{isCheckWe}}" type="userAvatarUrl" class="login-icon"></open-data>
      <text wx:else class='iconfont icon-nav_icon_avatar_nor no-login-icon'></text>
    </view>
    <view class="login">
      <button wx:if="{{!isCheckWe}}" plain class="loginBtn" bindtap="getUserProfile">微信授权</button>
      <button wx:elif="{{isCheckWe && !isCheckPhone}}" plain class="loginBtn" bindtap="inputPhoneNumber">绑定手机号</button>
      <open-data wx:else type="userNickName" class="name"></open-data>
    </view>
  </view>
  <mp-cells ext-class="my-cells" title="">
    <mp-cell link data-url="/pages/choiceTeam/choiceTeam" bindtap="gotoItem" hover value="团队管理" />
    <mp-cell link data-url="/pages/billList/billList" bindtap="gotoItem" hover value="查看录入发票" />
  </mp-cells>
  <!-- <button type="warn" open-type="contact">客服</button>
  <button type="warn" open-type="share">分享</button> -->
</view>